@startuml
package controller {
    class ExternalController {
        +forgotPassword()
    }
}

package repository {
    class DatabaseRepo {
        +findUserByEmail()
        +updatePassword()
    }
}

package utils {
    class EmailService {
        +sendPasswordResetEmail()
    }
}

package entity {
    class User {
        +id: int
        +username: String
        +email: String
        +password: String
    }
}

ExternalController --> DatabaseRepo : uses
ExternalController --> EmailService : uses
DatabaseRepo --> User : returns
@enduml
