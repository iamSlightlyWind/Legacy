@startuml
package controller {
    class AuthController {
        +resetPassword()
    }
}

package repository {
    class UserRepo {
        +findUserByEmail()
        +updatePassword()
    }
}

package service {
    class EmailService {
        +sendPasswordResetEmail()
    }
}

package entity {
    class User {
        +id: int
        +username: String
        +email: String
        +password: String
    }
}

AuthController --> UserRepo : uses
AuthController --> EmailService : uses
UserRepo --> User : returns
@enduml