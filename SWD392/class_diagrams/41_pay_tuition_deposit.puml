@startuml
package controller {
    class StudentController {
        +payTuitionDeposit()
    }
}

package repository {
    class PaymentRepo {
        +storePaymentRecord()
    }
}

package service {
    class PaymentService {
        +processPayment()
    }
}

package entity {
    class Payment {
        +id: int
        +userId: int
        +amount: double
        +status: String
    }
}

StudentController --> PaymentService : uses
PaymentService --> PaymentRepo : uses
PaymentRepo --> Payment : stores
@enduml